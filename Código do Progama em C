        printf("\n\n • Data de entrada: %d/%d/%d", dia1, mes1, ano1);
        printf("\n\n • Data de saída: %d/%d/%d", dia2, mes2, ano2);
        printf("\n\n • Quartos reservados:");
        for(i=0;i<quantq;i++)
        {
            printf(" %d ", numq[i]);
        }

        printf("\n\n • Animal: %c", animais);

        printf("\n • Serviço de quarto: %c", servico);


