                    printf("\n -> Ano:");
                    scanf("%d", &ano1);

                    printf("\n\n-> Digite a data de saída * informe com dois algarismos em cada área *\n");

                    printf("\n -> Dia:");
                    scanf("%d", &dia2);
                    printf("\n -> Mês:");
                    scanf("%d", &mes2);
                    printf("\n -> Ano:");
                    scanf("%d", &ano2);
                    break;


            case 3:    printf("\n\t\t\t    Sistema de Hospedagem\n");
                       printf("\t\t-------------------------------------------\n\n");
                       printf("\t\t\t\t HOTEL CEFET\n\n");
                       printf("----------------------------------------------------------------------------\n\n");

