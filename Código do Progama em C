        scanf("%d", &menu);

        printf("\n\n\n");
        system("pause");
        system("cls");


        do
        {

            switch (menu)
            {

            case 1: printf("\n\t\t\t    Sistema de Hospedagem\n");
                    printf("\t\t-------------------------------------------\n\n");
                    printf("\t\t\t\t HOTEL CEFET\n\n");
                    printf("----------------------------------------------------------------------------");

                    fflush(stdin);
                    printf("\n\n -> Informe seu nome: ");
                    gets(nome);
                    fflush(stdin);

                    printf("\n\n -> Informe seu CPF: ");
                    scanf("%d",&cpf);
                    break;

