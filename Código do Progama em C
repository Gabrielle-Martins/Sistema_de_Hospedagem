    printf(" -> Você está trazendo algum animal de estimação? (s/n) * há um acréscimo de R$50,00 *\n -> ");
    scanf("%c", &animais);
    fflush(stdin);

     if(animais=='s')
    {
        pagamento=pagamento+50;
    }

