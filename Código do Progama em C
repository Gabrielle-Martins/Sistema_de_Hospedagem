#include <stdio.h>
#include <stdlib.h>
#include <string.h>
#include <locale.h>


int main()
{

    setlocale (LC_ALL, "portuguese");

    char nome[50], nomeresp[50], animais, servico;
    int idade, cpf, cpfresp, quarto[3][4], quantq, integ, numq[12];
    int dias[13]={{0},{31},{28},{31},{30},{31},{30},{31},{31},{30},{31},{30},{31}};
    int dia1, dia2, mes1, mes2, ano1, ano2, diastotais;
    int i, d, b, x, c, q=1, a=1000, menu;
    float pagamento;


    system("color 0B");

    printf("\n\t\t\t    Sistema de Hospedagem\n");
    printf("\t\t---------------------------------------------\n\n");
    printf("\t\t\tSEJA BEM-VINDO AO HOTEL CEFET\n\n");
    printf("\t\t---------------------------------------------\n\n");
    printf("   * os dados a seguir devem ser cadastrados pelo responsável da reserva *\n");
    printf("----------------------------------------------------------------------------\n\n");


    fflush(stdin);
    printf("-> Informe seu nome: ");
    gets(nome);
    fflush(stdin);

    printf("\n\n-> Informe seu CPF: ");
    scanf("%d",&cpf);

    printf("\n\n-> Informe sua idade: ");
    scanf("%d",&idade);

    if (idade<18)
    {
            printf("\n\n * para continuar a operação, preencha os dados abaixo com as informações do seu responsável legal *\n\t\t\t\t (informe 0 para sair)\n\n  ");

            fflush(stdin);
            printf("-> Informe o nome do seu reponsável: ");
            gets(nomeresp);
            fflush(stdin);

            if (nomeresp=='0')
            {
                printf("\t\t\t\t HOTEL CEFET\n\n");
                printf("----------------------------------------------------------------------------\n\n");
                exit (0);
            }

            printf("\n\n-> Informe o CPF do seu responsável: ");
            scanf("%d",&cpfresp);

              if (cpfresp==0)
            {
                printf("\t\t\t\t HOTEL CEFET\n\n");
                printf("----------------------------------------------------------------------------\n\n");
                exit (0);
            }
    }

    system("cls");

    printf("\n\t\t\t    Sistema de Hospedagem\n");
    printf("\t\t-------------------------------------------\n\n");
    printf("\t\t\t\t HOTEL CEFET\n\n");
    printf("----------------------------------------------------------------------------");


    printf("\n\n-> Digite a data de entrada * informe com dois algarismos em cada área *\n");

    printf("\n -> Dia:");
    scanf("%d", &dia1);
    printf("\n -> Mês:");
    scanf("%d", &mes1);
    printf("\n -> Ano:");
    scanf("%d", &ano1);

    printf("\n\n-> Digite a data de saída * informe com dois algarismos em cada área *\n");

    printf("\n -> Dia:");
    scanf("%d", &dia2);
    printf("\n -> Mês:");
    scanf("%d", &mes2);
    printf("\n -> Ano:");
    scanf("%d", &ano2);

    x=mes2-mes1;
     if((mes1==mes2)&&(ano1==ano2))
    {
        diastotais=dia2-dia1;
    }

     else if (x==1)
    {
        diastotais=((dias[mes1]-dia1)+dia2);
    }

     else if((ano1==ano2)&& (x>=2))
    {
        diastotais=((dias[mes1]-dia1)+dia2);

        for(i=(mes1+1);i<mes2;i++)
        {
           diastotais=(diastotais+dias[i]);
        }
    }

    else
    {
        diastotais=((dias[mes1]-dia1)+dia2);

       for(i=12;i>mes1;i--)
       {
           diastotais=(diastotais+dias[i]);
       }

        c=ano2-ano1;

        if(c==1)
        {
            for(i=0;i<mes2;i++)
          {
            diastotais=diastotais+dias[i];
          }
        }

        else
        {
            c=c-1;

            for(i=0;i<c;i++)
            {
                for(b=0;b<13;b++)
               {
                  diastotais=diastotais+dias[b];
               }
            }

           for(i=0;i<mes2;i++)
           {
               diastotais=diastotais+dias[i];
           }
        }
    }

    pagamento=diastotais*50;


    printf("\n\n\n");
    system("pause");
    system("cls");

    printf("\n\t\t\t    Sistema de Hospedagem\n");
    printf("\t\t-------------------------------------------\n\n");
    printf("\t\t\t\t HOTEL CEFET\n\n");
    printf("----------------------------------------------------------------------------\n\n");

    printf("* Quartos disponíveis *");

    for(i=0;i<3;i++)
    {
        printf("\n\n Quartos no %d° andar:", i+1);
        printf("\n");
        for(d=0;d<4;d++)
        {
            quarto[i][d]=a+q;
            q++;
            printf("\n\t%d", quarto[i][d]);

        }
        a=a+1000;
        q=1;
    }

    printf("\n\n -> Quantos são os integrantes da reserva? -> ");
    scanf("%d", &integ);

    printf("\n\n -> Quantos quartos você deseja reservar? * há um valor de R$100,00 por quarto *\n ->");
    scanf("%d", &quantq);

    pagamento=pagamento+(quantq*100);

    printf("\n\n -> Quais quartos você deseja reservar?\n");

    for(i=0;i<quantq;i++)
    {
        printf("\n -> ");
        scanf("%d", &numq[i]);
    }

    printf("\n\n\n");
    system("pause");
    system("cls");

    printf("\n\t\t\t    Sistema de Hospedagem\n");
    printf("\t\t-------------------------------------------\n\n");
    printf("\t\t\t\t HOTEL CEFET\n\n");
    printf("----------------------------------------------------------------------------\n\n");

