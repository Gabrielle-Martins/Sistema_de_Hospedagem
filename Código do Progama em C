#include <stdio.h>
#include <stdlib.h>
#include <string.h>
#include <locale.h>

typedef struct Dados{
    char nome[80];
    int idade;
    int cpf;
}Sistema;

int TotalDias (int d1, int d2,int m1, int m2, int a1, int a2, int ds[])
{
    int x, i, c, b, dtotais;

    x=m2-m1;
     if((m1==m2)&&(a1==a2))
    {
        dtotais=d2-d1;
    }

     else if (x==1)
    {
        dtotais=((ds[m1]-d1)+d2);
    }

     else if((a1==a2)&& (x>=2))
    {
        dtotais=((ds[m1]-d1)+d2);

        for(i=(m1+1);i<m2;i++)
        {
           dtotais=(dtotais+ds[i]);
        }
    }

    else
    {
        dtotais=((ds[m1]-d1)+d2);

       for(i=12;i>m1;i--)
       {
           dtotais=(dtotais+ds[i]);
       }

        c=a2-a1;

        if(c==1)
        {
            for(i=0;i<m2;i++)
          {
            dtotais=dtotais+ds[i];
          }
        }

        else
        {
            c=c-1;

            for(i=0;i<c;i++)
            {
                for(b=0;b<13;b++)
               {
                  dtotais=dtotais+ds[b];
               }
            }

           for(i=0;i<m2;i++)
           {
               dtotais=dtotais+ds[i];
           }
        }
    }
    return dtotais;}


    float Pagamento (int diast, int quartos, char pets, char servicoq)
    {
        float pagmt;

         pagmt=diast*50;

    pagmt=pagmt+(quartos*100);

      if(pets=='s')
    {
        pagmt=pagmt+50;
    }

     if(servicoq=='s')
    {
        pagmt=pagmt+(diast*10);
    }
    return pagmt;}



